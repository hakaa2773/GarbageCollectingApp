<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:orientation="vertical"
    android:background="@color/darkyellow"
    android:layout_marginTop="50dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Garbage Collecting App"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/home_heding2"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/light_gray"
        android:padding="3dp"
        android:layout_gravity="center"
        android:id="@+id/about">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep Our Environment Clean and Safe"
            android:layout_marginLeft="70dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/blue"
            android:textStyle="bold"
            android:id="@+id/home_subheading"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
    <ImageView
        android:layout_width="410dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/usermain"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:weightSum="10">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:text="Select A Day" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="10">
        <Spinner
            android:layout_width="410dp"
            android:layout_height="50dp"
            android:id="@+id/item_day"
            android:background="@drawable/yellow"
            android:gravity="center_horizontal"
            android:layout_weight="3"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/item_type"
            android:layout_width="410dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_weight="3"
            android:textStyle="bold"
            android:textSize="25sp"
            android:height="40dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:layout_width="378dp"
            android:layout_below="@+id/item_type"
            android:layout_height="250dp"
            android:id="@+id/item_image"
            android:layout_margin="10dp"/>

    </LinearLayout>

</LinearLayout>